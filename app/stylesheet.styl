body
  font normal 1em/20px "Helvetica Neue", Helvetica, Arial, sans-serif
  color black
  background white
  margin 0

.container
  max-width 45em
  width 100%
  margin 0 auto
  padding 0 15px

.input-group input
  line-height 2em
  padding 0 0.5em
.input-group button
  line-height 2em


#todo-list
  padding 15px 20px
  margin 20px 0
  width 20em
  background lightgray
  box-shadow inset 0 5px 0 0 #FF0000
  li
    position relative
    list-style none
    background-color white
    border-radius 5px
    margin 0 0 1em
    padding .5em
    border-bottom .125em solid #a0a0a0
  li:last-child
    margin 0
  li:hover
    cursor pointer
    background tint(red, 25%)
    border-bottom-color: shade(red, 15%)
    .close-button
      color shade(red, 40%)
  label:hover
    cursor pointer

.close-button
  float right
  margin 3px 0


